<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/notifications_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"/>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/user_profile_settings_messages"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/activity_vertical_margin"
        android:clickable="true"
        android:background="?android:attr/selectableItemBackground">

        <TextView
            android:id="@+id/messages_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:ellipsize="marquee"
            android:fadingEdge="horizontal"
            android:textColor="@android:color/black"
            android:text="Сообщения"/>

        <TextView
            android:id="@+id/messages_summary"
            android:layout_width="300sp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/messages_title"
            android:layout_alignLeft="@android:id/title"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Уведомлять меня о получении новых сообщений"/>

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/messages_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/user_profile_settings_favorite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/activity_vertical_margin"
        android:clickable="true"
        android:background="?android:attr/selectableItemBackground">

        <TextView
            android:id="@+id/favorite_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:ellipsize="marquee"
            android:fadingEdge="horizontal"
            android:textColor="@android:color/black"
            android:text="Сообщения"/>

        <TextView
            android:id="@+id/favorite_summary"
            android:layout_width="300sp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/favorite_title"
            android:layout_alignLeft="@android:id/title"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="При изменении информации в избранных объявлениях"/>

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/favorite_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/user_profile_settings_advertisements"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/activity_vertical_margin"
        android:clickable="true"
        android:background="?android:attr/selectableItemBackground">

        <TextView
            android:id="@+id/advertisements_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:ellipsize="marquee"
            android:fadingEdge="horizontal"
            android:textColor="@android:color/black"
            android:text="Мои объявления"/>

        <TextView
            android:id="@+id/advertisements_summary"
            android:layout_width="300sp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/advertisements_title"
            android:layout_alignLeft="@android:id/title"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="При изменении статуса публикации моих объявлений"/>

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/advertisements_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_separator_size"
        android:background="@android:color/darker_gray"/>

    <TextView
        android:id="@+id/exit_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/activity_vertical_margin"
        android:text="СБРОСИТЬ СЧЕТЧИКИ УВЕДОМЛЕНИЙ"
        android:textSize="@dimen/text_description_size"
        android:clickable="true"
        android:background="?android:attr/selectableItemBackground"/>

</LinearLayout>