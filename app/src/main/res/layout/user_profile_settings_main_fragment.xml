<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/user_profile_settings_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/activity_vertical_margin"
                android:clickable="true"
                android:background="?android:attr/selectableItemBackground">

                <ImageView
                    android:id="@+id/profile_icon"
                    android:layout_width="@dimen/collapsing_toolbar_icon_size"
                    android:layout_height="@dimen/collapsing_toolbar_icon_size"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:id="@+id/profile_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/profile_summary"
                    android:maxLines="1"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:ellipsize="marquee"
                    android:fadingEdge="horizontal"
                    android:textColor="@android:color/black"
                    android:text="Title"/>

                <TextView
                    android:id="@+id/profile_summary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@android:id/title"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:maxLines="1"
                    android:text="Редактировать профиль"/>

            </RelativeLayout>

            <RelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/user_profile_settings_phone_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/activity_vertical_margin"
                android:clickable="true"
                android:background="?android:attr/selectableItemBackground">

                <ImageView
                    android:id="@+id/phone_number_icon"
                    android:layout_width="@dimen/collapsing_toolbar_icon_size"
                    android:layout_height="@dimen/collapsing_toolbar_icon_size"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:id="@+id/phone_number_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/phone_number_summary"
                    android:maxLines="1"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:ellipsize="marquee"
                    android:fadingEdge="horizontal"
                    android:textColor="@android:color/black"
                    android:text="Title"/>

                <TextView
                    android:id="@+id/phone_number_summary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@android:id/title"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:maxLines="1"
                    android:text="Изменить номер телефона"/>

            </RelativeLayout>

            <RelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/user_profile_settings_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/activity_vertical_margin"
                android:clickable="true"
                android:background="?android:attr/selectableItemBackground">

                <ImageView
                    android:id="@+id/location_icon"
                    android:layout_width="@dimen/collapsing_toolbar_icon_size"
                    android:layout_height="@dimen/collapsing_toolbar_icon_size"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:id="@+id/location_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/location_summary"
                    android:maxLines="1"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:ellipsize="marquee"
                    android:fadingEdge="horizontal"
                    android:textColor="@android:color/black"
                    android:text="Title"/>

                <TextView
                    android:id="@+id/location_summary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@android:id/title"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:maxLines="1"
                    android:text="Укажите свой адрес"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_separator_size"
                android:background="@android:color/darker_gray"/>

            <RelativeLayout
                android:id="@+id/user_profile_calls_switch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/activity_vertical_margin"
                android:clickable="true"
                android:background="?android:attr/selectableItemBackground">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Включить звонки"
                    android:textColor="@android:color/black"/>

                <android.support.v7.widget.SwitchCompat
                    android:id="@+id/calls_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/user_profile_notification_settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/activity_vertical_margin"
                android:clickable="true"
                android:background="?android:attr/selectableItemBackground">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Настройка уведомлений"
                    android:textColor="@android:color/black"/>

            </RelativeLayout>

            <TextView
                android:id="@+id/user_profile_settings_black_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:padding="@dimen/activity_vertical_margin"
                android:text="Черный список"
                android:textColor="@android:color/black"
                android:clickable="true"
                android:background="?android:attr/selectableItemBackground"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_separator_size"
                android:background="@android:color/darker_gray"/>

            <TextView
                android:id="@+id/user_profile_settings_help"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/activity_vertical_margin"
                android:text="Помощь"
                android:textColor="@android:color/black"
                android:clickable="true"
                android:background="?android:attr/selectableItemBackground"/>

            <TextView
                android:id="@+id/user_profile_settings_email_developer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/activity_vertical_margin"
                android:text="Написать разработчику"
                android:textColor="@android:color/black"
                android:clickable="true"
                android:background="?android:attr/selectableItemBackground"/>

            <TextView
                android:id="@+id/user_profile_settings_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_vertical_margin"
                android:layout_gravity="center_horizontal"
                android:text="Version"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_separator_size"
                android:background="@android:color/darker_gray"/>

            <TextView
                android:id="@+id/exit_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/activity_vertical_margin"
                android:text="Выйти"
                android:textSize="@dimen/text_description_size"
                android:clickable="true"
                android:background="?android:attr/selectableItemBackground"/>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</LinearLayout>