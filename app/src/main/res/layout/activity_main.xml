<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.deepdev_03.muvito.Activities.MainActivity">

    <FrameLayout
        android:id="@+id/main_activity_frame_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/main_tablayout_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/elevation"
            android:background="@drawable/toolbar_bottom_to_up_shadow"/>

        <android.support.design.widget.TabLayout
            android:id="@+id/navigation_bottom_bar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/bottom_tabs_size"
            android:background="@android:color/white"
            app:tabGravity="fill"/>

    </LinearLayout>

</FrameLayout>
