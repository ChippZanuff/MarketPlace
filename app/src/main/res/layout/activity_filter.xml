<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_filter"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.deepdev_03.muvito.FilterActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarFilterActivity"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="left"
            android:background="@drawable/close"
            android:onClick="onClickCloseFilter"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Фильтр"
            android:layout_marginLeft="40dp"
            android:textColor="#000"
            android:id="@+id/textViewToolbarFilterActivity"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            android:textColor="@color/blue"
            android:background="@null"
            android:text="ПРИМЕНИТЬ"
            />

    </android.support.v7.widget.Toolbar>


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tableLayoutFilterActivity"
        android:layout_below="@id/toolbarFilterActivity">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tableRowCategory"
            android:onClick="onClickTableRow">
            <ImageView
                android:src="@drawable/view_grid"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp" />
            <RelativeLayout
                android:layout_marginLeft="15dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:textSize="13sp"
                    android:text="Изменить категорию"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="17dp"
                    android:textColor="#9b9797"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:textSize="15sp"
                    android:text="Категория"
                    android:gravity="center_vertical"
                    android:layout_marginTop="17dp"
                    android:textColor="#000"/>
            </RelativeLayout>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_weight="1"
                android:background="#bab6b6"
                android:padding="2dip" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <View
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="#dcdbdb"
                android:padding="2dip" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <View
                android:layout_height="1dip"
                android:layout_weight="1"
                android:background="#bab6b6"
                android:padding="2dip" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tableRowLocation"
            android:onClick="onClickTableRow">
            <ImageView
                android:src="@drawable/map_marker"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"/>
            <RelativeLayout
                android:layout_marginLeft="15dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:textSize="13sp"
                    android:text="Изменить местоположение"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="17dp"
                    android:textColor="#9b9797"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:textSize="15sp"
                    android:text="Местоположение"
                    android:gravity="center_vertical"
                    android:layout_marginTop="17dp"
                    android:textColor="#000"/>
            </RelativeLayout>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <View
                android:layout_height="1dip"
                android:layout_weight="1"
                android:background="#bab6b6"
                android:padding="2dip" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/map_marker_radius"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:id="@+id/textViewFilterDistance"
                    android:textSize="13sp"
                    android:layout_marginLeft="15dp"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="17dp"
                    android:textColor="#9b9797"/>
                <SeekBar
                    android:id="@+id/seekBarDistance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginTop="30dp" />
            </RelativeLayout>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <View
                android:layout_height="1dip"
                android:layout_weight="1"
                android:background="#bab6b6"
                android:padding="2dip" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <View
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="#dcdbdb"
                android:padding="2dip" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <View
                android:layout_height="1dip"
                android:layout_weight="1"
                android:background="#bab6b6"
                android:padding="2dip" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <View
                android:layout_height="1dip"
                android:layout_weight="1"
                android:background="#bab6b6"
                android:padding="2dip" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <View
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="#dcdbdb"
                android:padding="2dip" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <View
                android:layout_height="1dip"
                android:layout_weight="1"
                android:background="#bab6b6"
                android:padding="2dip" />
        </TableRow>
    </TableLayout>


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tableLayoutFilterActivitySecond"
        android:layout_below="@id/tableLayoutFilterActivity">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tableRowView"
            android:onClick="onClickTableRow">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:textSize="13sp"
                    android:text="Вид главной"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="17dp"
                    android:textColor="#9b9797"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:textSize="15sp"
                    android:text="Списком"
                    android:gravity="center_vertical"
                    android:layout_marginTop="17dp"
                    android:textColor="#000"/>
            </RelativeLayout>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <View
                android:layout_height="1dip"
                android:layout_weight="1"
                android:background="#bab6b6"
                android:padding="2dip" />
        </TableRow>



        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tableRowSort"
            android:onClick="onClickTableRow">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:textSize="13sp"
                    android:text="Сортировка"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="17dp"
                    android:textColor="#9b9797"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:textSize="15sp"
                    android:text="По умолчанию"
                    android:gravity="center_vertical"
                    android:layout_marginTop="17dp"
                    android:textColor="#000"/>
            </RelativeLayout>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:layout_height="1dip"
                android:layout_weight="1"
                android:background="#bab6b6"
                android:padding="2dip" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tableRowPublished"
            android:onClick="onClickTableRow">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:textSize="13sp"
                    android:text="Опубликовано"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="17dp"
                    android:textColor="#9b9797"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:textSize="15sp"
                    android:text="За все время"
                    android:gravity="center_vertical"
                    android:layout_marginTop="17dp"
                    android:textColor="#000"/>
            </RelativeLayout>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <View
                android:layout_height="1dip"
                android:layout_weight="1"
                android:background="#bab6b6"
                android:padding="2dip" />
        </TableRow>
    </TableLayout>
</RelativeLayout>
